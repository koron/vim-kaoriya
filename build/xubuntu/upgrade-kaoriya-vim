#!/bin/sh

set -eu

make distclean

guilt push --all

./configure \
  --with-features=huge \
  --enable-gui=gtk2 \
  --enable-luainterp=dynamic \
  --with-luajit \
  --enable-pythoninterp=dynamic \
  --enable-python3interp=dynamic \
  --enable-rubyinterp=dynamic \
  --enable-fail-if-missing

make

sudo make install

make clean

guilt pop --all
